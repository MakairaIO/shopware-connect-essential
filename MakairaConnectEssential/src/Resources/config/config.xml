<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Makaira Configuration</title>
        <title lang="de-DE">Makaira Konfiguration</title>

        <input-field type="url">
            <name>makairaBaseUrl</name>
            <label>Base URL of Makaira API</label>
            <label lang="de-DE">Basis URL der Makaira API</label>
            <defaultValue>https://&lt;customer&gt;.makaira.io</defaultValue>
        </input-field>

        <input-field type="password">
            <name>makairaSharedSecret</name>
            <label>Makaira shared secret</label>
            <label lang="de-DE">Makaira Shared Secret</label>
            <helpText>Please set this value per saleschannel</helpText>
            <helpText lang="de-DE">Bitte setzen Sie diesen Wert pro Saleschannel</helpText>
        </input-field>

        <input-field type="text">
            <name>makairaCustomer</name>
            <label>Makaira customer</label>
            <label lang="de-DE">Makaira Kunde</label>
        </input-field>

        <input-field type="text">
            <name>makairaInstance</name>
            <label>Makaira instance</label>
            <label lang="de-DE">Makaira Instanz</label>
            <placeholder>e.g. live</placeholder>
            <placeholder lang="de-DE">z.B. live</placeholder>
            <helpText>Please set this value per saleschannel</helpText>
            <helpText lang="de-DE">Bitte setzen Sie diesen Wert pro Saleschannel</helpText>
        </input-field>

        <input-field type="int">
            <name>apiTimeout</name>
            <label>API timeout (seconds)</label>
            <label lang="de-DE">API Timeout (Sekunden)</label>
            <defaultValue>30</defaultValue>
        </input-field>
    </card>
</config>
